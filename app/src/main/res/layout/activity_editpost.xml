<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clemadr06.litclub.editpost"
    >
    <android.support.v7.widget.Toolbar android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbaredit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbaredit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="TITLE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titleeedit"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title"
                android:layout_marginBottom="4sp"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/subedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleeedit"
                android:text="SUBTITLE"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sub2edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_below="@+id/sub"
                android:background="@drawable/edittext"
                android:layout_marginBottom="4sp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="SubTitle"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/descedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sub2edit"
                android:layout_marginTop="10dp"
                android:text="DESCRIPTION"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/desc1edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_below="@+id/descedit"
                android:background="@drawable/edittext"
                android:layout_marginBottom="4sp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:id="@+id/parentedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date1edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/desc1edit"
                    android:text="START DATE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/titleeedit"
                    android:layout_alignStart="@+id/titleeedit"
                    android:layout_below="@+id/date1edit"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/date1eedit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/title"
                        android:layout_marginBottom="4sp"
                        android:ems="10"
                        android:hint="Date"
                        android:background="@drawable/edittext"
                        android:inputType="textPersonName"
                        android:focusable="false"/>
                    <EditText
                        android:id="@+id/time1eedit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/edittext"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/date1eedit"
                        android:layout_marginBottom="4sp"
                        android:ems="10"
                        android:hint="Time"
                        android:inputType="textPersonName"
                        android:focusable="false"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/date2edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/desc1edit"
                android:layout_marginTop="10dp"
                android:text="END DATE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_below="@+id/date2edit"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/date2eedit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/title"
                    android:background="@drawable/edittext"
                    android:layout_marginBottom="4sp"
                    android:ems="10"
                    android:hint="Date"
                    android:inputType="textPersonName"
                    android:focusable="false"/>
                <EditText
                    android:id="@+id/time2eedit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/date2eedit"
                    android:layout_marginBottom="4sp"
                    android:ems="10"
                    android:background="@drawable/edittext"
                    android:hint="Time"
                    android:inputType="textPersonName"
                    android:focusable="false"/>

            </LinearLayout>


            <TextView
                android:id="@+id/venueedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/time1edit"
                android:text="VENUE"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/venue1edit"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_below="@+id/venueedit"
                android:layout_marginBottom="4sp"
                android:ems="10"
                android:background="@drawable/edittext"
                android:hint="venue"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/imrledit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="114dp"
                android:layout_marginTop="10dp"
                android:text="IMAGE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/imrl1edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_below="@+id/imrledit"
                android:layout_marginTop="-114dp"
                android:ems="10"
                android:hint="iurl"

                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/m1edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imrl1edit"
                android:text="MANAGER 1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/m1nedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/titleeedit"
                android:layout_alignParentBottom="true"
                android:background="@drawable/edittext"
                android:layout_alignStart="@+id/titleeedit"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/m1pedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4sp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:background="@drawable/edittext"
                android:hint="contact no"
                android:inputType="phone" />

            <TextView
                android:id="@+id/m2edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANAGER 2"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/m2nedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0sp"
                android:ems="10"
                android:background="@drawable/edittext"
                android:hint="name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/m2pedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="4sp"
                android:ems="10"
                android:background="@drawable/edittext"
                android:layout_marginTop="5dp"
                android:hint="Contact no."
                android:inputType="phone" />

            <Button
                android:id="@+id/orgedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="orga"
                android:layout_marginTop="10dp"
                android:text="organise" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>